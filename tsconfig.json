{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "./out",
		"paths": { "@/*": ["./src/*"] },
		"plugins": [{ "name": "next" }],
		"resolveJsonModule": true,
		"rootDirs": ["./src", "./.next/types"],
		"skipLibCheck": true,
		"strict": false
	},
	"files": [],
	"include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts"],
	"references": [
		{ "path": "./src/api" },
		{ "path": "./src/app" },
		{ "path": "./src/components" },
		{ "path": "./src/hooks" },
		{ "path": "./src/match" },
		{ "path": "./src/schema" },
		{ "path": "./src/utils" }
	],
	"exclude": [
		"node_modules"
	]
}
